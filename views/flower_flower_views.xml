    <!-- Top menu item -->

    <menuitem name="Flowers" id="flower_shop.menu_root" action="flower_shop_action_window"
              web_icon="module_name,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="flowers" id="flower_shop.menu_1" parent="flower_shop.menu_root"/>

